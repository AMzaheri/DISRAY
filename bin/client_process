gcc ~/DISRAY/prog/map.c -o ~/DISRAY/prog/m_$(uname -m) -lm >> ~/DISRAY/log/log 2>&1 
gcc ~/DISRAY/prog/reduc.c -o ~/DISRAY/prog/r_$(uname -m) -lm >> ~/DISRAY/log/log 2>&1 


~/DISRAY/prog/m_$(uname -m) >> ~/DISRAY/log/log 2>&1 
~/DISRAY/prog/r_$(uname -m) >> ~/DISRAY/log/log 2>&1 

